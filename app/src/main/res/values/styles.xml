<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.NoTitle" parent="@android:style/Theme.Holo.Light.NoActionBar"></style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">7dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="StyleItemLeft2">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="StyleLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#CCCCCC</item>
    </style>

    <style name="StyleEditTextItemLeft">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/edit_text_height</item>
        <item name="android:ems">12</item>
        <item name="android:textColorHint">@color/gray_txt</item>
        <item name="android:textSize">15sp</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="StyleEditTextItemLeft2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/edit_text_height</item>
        <item name="android:ems">12</item>
        <item name="android:textColorHint">@color/gray_txt</item>
        <item name="android:textSize">15sp</item>
    </style>
</resources>
